<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" >

    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%-5p] %C{1}#%M() - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMax" value="FATAL"/>
        </filter>
    </appender>

    <appender name="file" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/app.log"/>
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="1MB"/>
        <param name="MaxBackupIndex" value="10"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MMM-dd HH:mm:ss.SSS} [%-5p] %C{10}#%M() - %m%n"/>
        </layout>
    </appender>

    <category name="org.apache,org.springframework,org.hibernate,org.dozer" >
        <priority value="info"/>
    </category>

    <category name="com.hiroxpepe" >
        <priority value="trace"/>
    </category>

    <root>
        <priority value="warn"/>
        <appender-ref ref="stdout"/>
        <appender-ref ref="file"/>
    </root>

</log4j:configuration>